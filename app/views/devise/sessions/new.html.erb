<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4">
      <div class= "form-login">
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true, placeholder: "bob@gmail.com", class: "form-control" %>
          <%= f.input :password, label: 'Senha', required: false, placeholder: "••••••" %>
          <%= f.input :remember_me, label: 'Lembrar', as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "btn" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
